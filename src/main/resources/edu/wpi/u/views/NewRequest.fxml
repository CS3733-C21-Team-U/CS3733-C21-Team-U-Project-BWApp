<AnchorPane prefHeight="1000.0" prefWidth="1700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.u.controllers.NewRequestController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="New Request" textAlignment="CENTER">
               <font>
                  <Font size="42.0" />
               </font>
            </Label>
            <JFXTextField fx:id="makeTitleField" labelFloat="true" maxWidth="-Infinity" prefHeight="33.0" prefWidth="400.0" promptText="Title" />
            <JFXTextArea fx:id="makeDescriptionField" focusColor="BLACK" labelFloat="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="134.0" prefWidth="400.0" promptText="Description" />
            <JFXDatePicker fx:id="makeDate2BCompleteDatePicker" prefHeight="25.0" prefWidth="250.0" promptText="Date to Completed By">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </JFXDatePicker>
            <HBox alignment="CENTER_LEFT" maxWidth="-Infinity" prefHeight="100.0" prefWidth="900.0">
               <children>
                  <AnchorPane prefHeight="200.0" prefWidth="550.0">
                     <children>
                        <JFXChipView fx:id="makeLocationChipView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="445.0" promptText="Location" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="550.0">
                     <children>
                        <JFXChipView fx:id="makeStaffChipView" prefHeight="100.0" prefWidth="200.0" promptText="Staff Name" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <StackPane fx:id="laundryStack" prefHeight="257.0" prefWidth="588.0">
               <children>
                  <Pane fx:id="makeLaundryPane" prefHeight="200.0" prefWidth="200.0" visible="false">
                     <children>
                        <JFXTextField fx:id="madeLaundryField" labelFloat="true" layoutY="-1.0" prefHeight="31.0" prefWidth="282.0" text="Laundry" />
                     </children>
                  </Pane>
                  <Pane fx:id="makeSecurityPane" prefHeight="200.0" prefWidth="200.0" visible="false">
                     <children>
                        <JFXTextField fx:id="madeSecurityField" labelFloat="true" prefHeight="31.0" prefWidth="215.0" text="Security" />
                     </children>
                  </Pane>
                  <Pane fx:id="makeMaintenancePane" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="257.0" prefWidth="1700.0" spacing="20.0">
                           <children>
                              <Label text="Maintenance Fields">
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <JFXTextField fx:id="madeMaintenanceFieldMachineUsed" labelFloat="true" prefHeight="31.0" prefWidth="400.0" promptText="Machine Used (String)" />
                              <JFXTextField fx:id="madeMaintenanceFieldPriority" labelFloat="true" prefHeight="31.0" prefWidth="400.0" promptText="Priority (Integer)" />
                           </children>
                        </VBox>
                     </children>
                  </Pane>
               </children>
            </StackPane>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <JFXButton onAction="#handleSaveNewRequest" prefHeight="31.0" prefWidth="166.0" text="Save" />
                  <JFXButton onAction="#HandleMakeCancelButton" opacity="0.5" prefHeight="33.0" prefWidth="166.0" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
