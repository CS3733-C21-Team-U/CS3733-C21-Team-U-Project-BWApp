<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="70.0" prefWidth="230.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.u.controllers.EdgeContextMenuController">
   <children>
      <VBox alignment="TOP_CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="40.0">
               <children>
                  <Label minWidth="50.0" prefWidth="70.0" text="Permission: ">
                     <HBox.margin>
                        <Insets left="10.0" top="4.0" />
                     </HBox.margin>
                  </Label>
                  <JFXComboBox fx:id="edgeComboBox" labelFloat="true" minWidth="110.0" promptText="Select" />
               </children>
               <padding>
                  <Insets left="10.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <JFXButton alignment="CENTER" minWidth="64.0" onAction="#handleSaveButton" prefHeight="36.0" styleClass="button-contained" text="Save">
                     <HBox.margin>
                        <Insets bottom="5.0" left="10.0" top="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="16.0" right="16.0" />
                     </padding>
                  </JFXButton>
                  <JFXButton fx:id="deleteButton" alignment="CENTER" minWidth="64.0" onAction="#handleDeleteButton" prefHeight="36.0" styleClass="button-text" text="Delete">
                     <HBox.margin>
                        <Insets bottom="5.0" left="10.0" top="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="16.0" right="16.0" />
                     </padding>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
