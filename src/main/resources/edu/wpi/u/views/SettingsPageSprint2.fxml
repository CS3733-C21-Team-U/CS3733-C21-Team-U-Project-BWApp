<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.u.controllers.login.SettingsPageController">
   <children>
      <VBox layoutX="300.0" layoutY="134.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Settings Page" />
            <Label text="Path Finding Modes" />
            <HBox prefHeight="30.0" prefWidth="600.0">
               <children>
                  <JFXButton fx:id="pathMode1Button" onAction="#handlePathMode1" text="Mode 1" />
                  <JFXButton fx:id="pathMode2Button" onAction="#handlePathMode2" text="Mode 2" />
               </children>
            </HBox>
            <Label text="Load CSV File" />
            <HBox prefHeight="40.0" prefWidth="600.0">
               <children>
                  <JFXTextField fx:id="filePathTextField" promptText="placeholder.csv" />
                  <JFXButton fx:id="loadCSVButton" onAction="#handleLoadCSV" text="Open Explorer" />
                  <JFXTextField fx:id="tableNameTextFIeld" labelFloat="true" promptText="New Table Name" />
                  <JFXButton fx:id="createTableButton" onAction="#handleCreateTable" text="Load CSV and Create New Table" />
               </children>
            </HBox>
            <Label text="Set theme" />
            <HBox prefHeight="21.0" prefWidth="600.0">
               <children>
                  <JFXRadioButton fx:id="setTheme1" onAction="#handleSetTheme1" selected="true" text="Light Theme">
                     <toggleGroup>
                        <ToggleGroup fx:id="themeButtons" />
                     </toggleGroup></JFXRadioButton>
                  <JFXRadioButton fx:id="setTheme2" layoutX="10.0" layoutY="10.0" onAction="#handleSetTheme2" text="Dark Theme" toggleGroup="$themeButtons" />
               </children>
            </HBox>
            <Label text="Set Contact info" />
            <Label text="Enter Phone Number" />
            <JFXTextField fx:id="phoneNumTextField" />
            <Label text="Enter E-mail address" />
            <JFXTextField fx:id="emailAddressTextField" />
            <JFXButton fx:id="contactChangeButton" onAction="#handleContactChange" text="Apply Contact Change" />
            <Label fx:id="check" />
         </children>
      </VBox>
   </children>
</AnchorPane>
