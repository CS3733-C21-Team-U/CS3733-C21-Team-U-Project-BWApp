<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.u.controllers.login.COVIDController">
   <children>
      <VBox layoutX="278.0" layoutY="61.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Please check all that apply" />
            <HBox prefHeight="58.0" prefWidth="600.0">
               <children>
                  <JFXCheckBox fx:id="Q1CheckBox" text="I have had a symptomatic COVID-19 test or I have recieved positive test result for COVID- 19 in the last 14 days." />
               </children>
            </HBox>
            <HBox prefHeight="34.0" prefWidth="600.0">
               <children>
                  <JFXCheckBox fx:id="Q2CheckBox" text="I am experiencing COVID-19 like symptoms." />
               </children>
            </HBox>
            <HBox prefHeight="48.0" prefWidth="600.0">
               <children>
                  <JFXCheckBox fx:id="Q3CheckBox" text="I have been in close contact with someone diagnosed with COVID-19 in the last 14 days." />
               </children>
            </HBox>
            <HBox prefHeight="37.0" prefWidth="600.0">
               <children>
                  <JFXCheckBox fx:id="Q4CheckBox" text="I have been asked to self-isolate or quarantine by a doctor or local public health official in the last 14 days." />
               </children>
            </HBox>
            <HBox prefHeight="32.0" prefWidth="600.0">
               <children>
                  <JFXCheckBox fx:id="Q5CheckBox" text="I feel good (No COVID/ No Symptoms" />
               </children>
            </HBox>
            <JFXButton fx:id="submitSurveyButton" onAction="#handleCovidSurveyFill" text="Submit" />
         </children>
      </VBox>
   </children>
</AnchorPane>
